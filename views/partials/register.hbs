<div class="login-register-block register-block">
    <form action="user/createUser" name="registerForm" method="post" enctype="multipart/form-data"
           id="registerForm" onsubmit="return validateForm();">
        <div class="form-group">
            <label for="userName">Введіть своє ім'я:</label>
            <input type="text" class="form-control" name="userName" id="userName">
        </div>
        <div class="form-group">
            <label for="userSurname">Введіть своє прізвище:</label>
            <input type="text" class="form-control" name="userSurname" id="userSurname">
        </div>
        <div class="form-group">
            <label for="userBirthDate">Введіть свою дату народження:</label>
            <input type="date" class="form-control" name="userBirthDate" id="userBirthDate">
        </div>
        <div class="form-group">
            <label for="userGender">Оберіть стать:</label>
            <select class="form-control" id="userGender" name="userGender">
                <option selected>чоловіча</option>
                <option>жіноча</option>
            </select>
        </div>
        <div class="form-group">
            <label for="userEmail">Введіть свою пошту:</label>
            <input type="email" class="form-control" name="userEmail" id="userEmail">
        </div>
        <div class="form-group">
            <label for="userLogin">Введіть логін:</label>
            <input type="text" class="form-control" name="userLogin" id="userLogin">
        </div>
        <div class="form-group">
            <label for="userPassword">Введіть пароль:</label>
            <input type="password" class="form-control" name="userPassword" id="userPassword">
        </div>
        <div class="form-group">
            <label for="userPasswordReenter">Повторіть пароль:</label>
            <input type="password" class="form-control" name="userPasswordReenter" id="userPasswordReenter">
        </div>
        <div class="form-group">
            <label for="userInfo">Розкажіть про себе:</label>
            <textarea class="form-control" id="userInfo" name="userInfo" rows="3"></textarea>
        </div>
        <div class="form-group">
            <label for="userAvatar">Оберіть фото профіля:</label>
            <input type="file" class="form-control-file" name="userAvatar" id="userAvatar" accept="image/*">
        </div>
        <input type="submit" class="btn btn-default" value="Зареєструватись" id="submit">
        <!--<button type="button" class="btn btn-default" id="submit">Зареєструватись</button>-->
    </form>
    <div class="alert alert-danger alert-client-validation">
        <strong>Помилка реєстрації!</strong>
        <div class="alert-error-text" id="alertClientErrorText"></div>
    </div>
    {{#if errorsExist }}
        <div class="alert alert-danger alert-dismissible">
            <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
            <strong>Помилка реєстрації!</strong>
            <div class="alert-error-text" id="alertErrorText">
                {{#each errors}}
                    {{this}}
                    <br>
                {{/each}}
            </div>
        </div>
    {{/if}}
</div>
<script src="js/registerValidation.js"></script>
